{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@uplift/ui": ["../../packages/ui"],
      "@uplift/ui/mobile": ["../../packages/ui/mobile"],
      "@uplift/network": ["../../packages/network"],
      "@uplift/types": ["../../packages/types"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
